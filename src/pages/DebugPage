import React, { useState, useEffect } from 'react';

const DebugPage = () => {
  const [status, setStatus] = useState('Checking...');
  const [apiUrl, setApiUrl] = useState('');
  const [logs, setLogs] = useState([]);

  useEffect(() => {
    setApiUrl(process.env.REACT_APP_API_URL || 'Not set');
    testConnection();
  }, []);

  const addLog = (msg) => {
    setLogs(prev => [...prev, msg + ' at ' + new Date().toLocaleTimeString()]);
  };

  const testConnection = async () => {
    addLog('ğŸ” Testing connection...');
    
    // Test 1: Check API URL
    addLog(`API URL: ${process.env.REACT_APP_API_URL}`);
    
    // Test 2: Backend health
    try {
      const res = await fetch('https://my-islam-backend.onrender.com/health');
      const data = await res.json();
      addLog(`âœ… Health: ${JSON.stringify(data)}`);
      setStatus('âœ… Connected');
    } catch (err) {
      addLog(`âŒ Health failed: ${err.message}`);
      setStatus('âŒ Failed');
    }

    // Test 3: Prayer methods
    try {
      const res = await fetch('https://my-islam-backend.onrender.com/api/prayer/methods');
      const data = await res.json();
      addLog(`âœ… Prayer methods: ${data.success ? 'OK' : 'Failed'}`);
    } catch (err) {
      addLog(`âŒ Prayer methods failed: ${err.message}`);
    }
  };

  return (
    <div style={{ padding: '20px', fontFamily: 'monospace' }}>
      <h1 style={{ color: '#d4af37' }}>ğŸ” Debug Page</h1>
      
      <div style={{ background: '#f0f0f0', padding: '15px', borderRadius: '10px', marginBottom: '20px' }}>
        <p><strong>Status:</strong> {status}</p>
        <p><strong>API URL:</strong> {apiUrl}</p>
        <button 
          onClick={testConnection}
          style={{
            background: '#d4af37',
            border: 'none',
            padding: '10px 20px',
            borderRadius: '5px',
            marginTop: '10px'
          }}
        >
          Test Again
        </button>
      </div>

      <div style={{ background: '#000', color: '#0f0', padding: '15px', borderRadius: '10px', height: '300px', overflow: 'auto' }}>
        {logs.map((log, i) => (
          <div key={i} style={{ margin: '5px 0', fontSize: '12px' }}>{log}</div>
        ))}
      </div>
    </div>
  );
};

export default DebugPage;
